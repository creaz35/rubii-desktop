{
  "name": "rubii",
  "author": "Rubii",
  "description": "Rubii Desktop App",
  "version": "1.0.17",
  "private": true,
  "main": "./src/electron-entry.js",
  "dependencies": {
    "active-win": "^7.7.2",
    "axios": "^1.1.3",
    "axios-retry": "^3.3.1",
    "bookmark-parser": "^0.1.6",
    "check-internet-connected": "^2.0.6",
    "electron-active-window": "^0.0.6",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.2.1",
    "env-cmd": "^10.1.0",
    "iconv": "^3.0.1",
    "internet-available": "^1.0.0",
    "is-online": "^10.0.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-scripts": "2.1.8",
    "react-speech-kit": "^3.0.1",
    "save": "^2.5.0",
    "uiohook-napi": "^1.2.0",
    "update-electron-app": "^2.0.1"
  },
  "scripts": {
    "start": "set BROWSER=none && react-scripts start",
    "start-electron": "set NODE_ENV=true && electron .",
    "rebuild": "electron-rebuild",
    "build": "electron-builder build --win --publish never",
    "build:win": "electron-builder build --win --publish never",
    "build:mac": "electron-builder build --mac --publish never",
    "deploy": "electron-builder build --win --publish always",
    "deploy:win": "electron-builder build --win --publish always",
    "deploy:mac": "electron-builder build --mac --publish always",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "pack": "build --dir",
    "dist": "build",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:all": "electron-builder -mw",
    "build-react": "react-scripts build"
  },
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "electron": "^19.0.1",
    "electron-builder": "^22.7.0",
    "electron-rebuild": "^3.2.7"
  },
  "build": {
    "appId": "rubii",
    "productName": "Rubii",
    "copyright": "Copyright Â© 2022 Rubii",
    "afterSign": "scripts/notarize.js",
    "publish": [
      {
        "provider": "github",
        "owner": "creaz35",
        "repo": "rubii-desktop"
      }
    ],
    "mac": {
      "icon": "./public/icons/mac/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "./entitlements.mac.plist",
      "entitlementsInherit": "./entitlements.mac.plist",
      "gatekeeperAssess": false,
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "icon": "./public/icons/png/256x256.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "rfc3161TimeStampServer": "http://timestamp.digicert.com",
      "certificateFile": "./omgd_limited.pfx",
      "certificatePassword": "s]czfA&BZ0?Z7vr}"
    },
    "extends": null
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
